{
  "name": "hodlem-sol",
  "version": "1.0.0",
  "description": "Application de poker Texas Hold'em avec crypto",
  "main": "server/index.ts",
  "scripts": {
    "start": "ts-node server/index.ts",
    "dev": "nodemon server/index.ts",
    "build": "tsc",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build:client": "cd client && npm install && npm run build",
    "build:server": "tsc",
    "build:prod": "npm run build:client && npm run build:server"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17"
  }
} 